{
  "name": "@xsuite/chainsimulator",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "run-script-os",
    "build:linux": "./build-chainsimulator.sh csproxy-linux-amd64 \"-extldflags '-Wl,-rpath,\\$ORIGIN'\"",
    "build:darwin": "./build-chainsimulator.sh csproxy-darwin-amd64 \"-extldflags '-Wl,-rpath,@loader_path'\"",
    "postinstall": "chmod -f +x ./bin/csproxy-* || true"
  },
  "files": [
    "bin",
    "config",
    "index.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "run-script-os": "1.1.6"
  }
}
